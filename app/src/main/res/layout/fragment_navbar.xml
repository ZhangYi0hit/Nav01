<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavBarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_grey"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/newpost"
            android:layout_width="66dp"
            android:layout_height="55dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_med_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/bottom_nav_state_list"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_med_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/bottom_nav_state_list"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_med_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/doctor"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/bottom_nav_state_list"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_med_people"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hamburger"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/bottom_nav_state_list"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_med_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>